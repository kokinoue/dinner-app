<div class="container">
  <h2 class="formtitle">ユーザー情報を編集</h2>
  <hr>
  <%= form_for(@user) do |f| %>

  <div class="field">
   <%= f.label :名前%><br/>
   <%= f.text_field :name%>
 </div><br/>

 <div class="field">
   <%= f.label :メールアドレス%><br/>
   <%= f.text_field :email%>
 </div><br/>

 <% if @user.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
      <% @user.errors.full_messages.each do |message| %>
        <p><%= message %></p>
      <% end %>
  </div>
<% end %>

 <div class="field">
   <%= f.label :グループID（半角数字8字） %><br/>
   <%= f.number_field :family_group_id %>
 </div><br/>

 <div class="actions">
    <%= f.submit "更新する"%>
 </div>
 <% end %>
</div>
